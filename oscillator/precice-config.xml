<?xml version="1.0"?>
<precice-configuration>
  <log enabled="1">
    <sink filter="%Severity% > debug" />
  </log>

  <solver-interface dimensions="2" >
  <!-- Use this to activate waveforms
  <solver-interface dimensions="2" experimental="true">
  -->
    <data:scalar name="Force-One"  />
    <data:scalar name="Force-Two"  />

    <mesh name="Mass-One-Mesh">
      <use-data name="Force-One" />
      <use-data name="Force-Two" />
    </mesh>

    <mesh name="Mass-Two-Mesh">
      <use-data name="Force-One" />
      <use-data name="Force-Two" />
    </mesh>

    <participant name="Mass-One">
      <use-mesh name="Mass-One-Mesh" provide="yes"/>
      <write-data name="Force-One" mesh="Mass-One-Mesh" />
      <read-data  name="Force-Two" mesh="Mass-One-Mesh" />
      <!-- Use this to activate first order interpolation
      <read-data  name="Force-Two" mesh="Mass-One-Mesh" waveform-order="1" />
      -->
    </participant>

    <participant name="Mass-Two">
      <use-mesh name="Mass-One-Mesh" from="Mass-One"/>
      <use-mesh name="Mass-Two-Mesh" provide="yes"/>
      <write-data name="Force-Two" mesh="Mass-Two-Mesh" />
      <read-data  name="Force-One" mesh="Mass-Two-Mesh" />
      <!-- Use this to activate first order interpolation
      <read-data  name="Force-One" mesh="Mass-Two-Mesh" waveform-order="1" />
      -->
      <mapping:nearest-neighbor direction="write" from="Mass-Two-Mesh" to="Mass-One-Mesh" constraint="conservative" />
      <mapping:nearest-neighbor direction="read"  from="Mass-One-Mesh" to="Mass-Two-Mesh" constraint="conservative" />
    </participant>

    <m2n:sockets from="Mass-One" to="Mass-Two" exchange-directory=".." />

    <coupling-scheme:serial-implicit>
      <participants first="Mass-One" second="Mass-Two" />
      <max-time value="1" />
      <time-window-size value="0.01" />
      <max-iterations value="200" />
      <min-iteration-convergence-measure min-iterations="1" data="Force-One" mesh="Mass-One-Mesh"/>
      <relative-convergence-measure data="Force-One" mesh="Mass-One-Mesh" limit="1e-10"/>
      <relative-convergence-measure data="Force-Two" mesh="Mass-One-Mesh" limit="1e-10"/>
      <exchange data="Force-One" mesh="Mass-One-Mesh" from="Mass-One" to="Mass-Two" />
      <!-- Use this for higher accuracy with waveforms and preCICE v3
      <exchange data="Force-One" mesh="Mass-One-Mesh" from="Mass-One" to="Mass-Two" initialize="true" />
      -->
      <exchange data="Force-Two" mesh="Mass-One-Mesh" from="Mass-Two" to="Mass-One" initialize="true"/>
    </coupling-scheme:serial-implicit>
  </solver-interface>

</precice-configuration>
