<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > debug and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="2">
    <data:vector name="Stress-Upstream" />
    <data:vector name="Displacement-Upstream" />
    <data:vector name="Stress-Downstream" />
    <data:vector name="Displacement-Downstream" />

    <mesh name="Fluid-Upstream-Mesh-Centers">
      <use-data name="Stress-Upstream" />
    </mesh>

    <mesh name="Fluid-Upstream-Mesh-Nodes">
      <use-data name="Displacement-Upstream" />
    </mesh>

    <mesh name="Fluid-Downstream-Mesh-Centers">
      <use-data name="Stress-Downstream" />
    </mesh>

    <mesh name="Fluid-Downstream-Mesh-Nodes">
      <use-data name="Displacement-Downstream" />
    </mesh>

    <mesh name="Solid-Left-Mesh">
      <use-data name="Displacement-Upstream" />
      <use-data name="Stress-Upstream" />
    </mesh>

    <mesh name="Solid-Right-Mesh">
      <use-data name="Displacement-Downstream" />
      <use-data name="Stress-Downstream" />
    </mesh>

    <participant name="Fluid">
      <use-mesh name="Fluid-Upstream-Mesh-Nodes" provide="yes" />
      <use-mesh name="Fluid-Upstream-Mesh-Centers" provide="yes" />
      <use-mesh name="Solid-Left-Mesh" from="Solid-Left" />
      <use-mesh name="Fluid-Downstream-Mesh-Nodes" provide="yes" />
      <use-mesh name="Fluid-Downstream-Mesh-Centers" provide="yes" />
      <use-mesh name="Solid-Right-Mesh" from="Solid-Right" />
      <read-data name="Displacement-Upstream" mesh="Fluid-Upstream-Mesh-Nodes" />
      <write-data name="Stress-Upstream" mesh="Fluid-Upstream-Mesh-Centers" />
      <read-data name="Displacement-Downstream" mesh="Fluid-Downstream-Mesh-Nodes" />
      <write-data name="Stress-Downstream" mesh="Fluid-Downstream-Mesh-Centers" />
      <mapping:nearest-neighbor
        direction="read"
        from="Solid-Left-Mesh"
        to="Fluid-Upstream-Mesh-Nodes"
        constraint="consistent" />
      <mapping:nearest-neighbor
        direction="read"
        from="Solid-Right-Mesh"
        to="Fluid-Downstream-Mesh-Nodes"
        constraint="consistent" />
    </participant>

    <participant name="Solid-Left">
      <use-mesh name="Solid-Left-Mesh" provide="yes" />
      <use-mesh name="Fluid-Upstream-Mesh-Centers" from="Fluid" />
      <read-data name="Stress-Upstream" mesh="Solid-Left-Mesh" />
      <write-data name="Displacement-Upstream" mesh="Solid-Left-Mesh" />
      <watch-point mesh="Solid-Left-Mesh" name="Flap-Tip" coordinate="-1.05;1" />
      <mapping:nearest-neighbor
        direction="read"
        from="Fluid-Upstream-Mesh-Centers"
        to="Solid-Left-Mesh"
        constraint="consistent" />
    </participant>

    <participant name="Solid-Right">
      <use-mesh name="Solid-Right-Mesh" provide="yes" />
      <use-mesh name="Fluid-Downstream-Mesh-Centers" from="Fluid" />
      <read-data name="Stress-Downstream" mesh="Solid-Right-Mesh" />
      <write-data name="Displacement-Downstream" mesh="Solid-Right-Mesh" />
      <watch-point mesh="Solid-Right-Mesh" name="Flap-Tip" coordinate="0.95;1" />
      <mapping:nearest-neighbor
        direction="read"
        from="Fluid-Downstream-Mesh-Centers"
        to="Solid-Right-Mesh"
        constraint="consistent" />
    </participant>

    <m2n:sockets from="Fluid" to="Solid-Left" exchange-directory=".." />
    <m2n:sockets from="Fluid" to="Solid-Right" exchange-directory=".." />

    <coupling-scheme:multi>
      <time-window-size value="0.01" />
      <max-time value="5" />
      <participant name="Fluid" control="yes" />
      <participant name="Solid-Left" />
      <participant name="Solid-Right" />
      <exchange data="Stress-Upstream" mesh="Fluid-Upstream-Mesh-Centers" from="Fluid" to="Solid-Left" />
      <exchange data="Stress-Downstream" mesh="Fluid-Downstream-Mesh-Centers" from="Fluid" to="Solid-Right" />
      <exchange data="Displacement-Upstream" mesh="Solid-Left-Mesh" from="Solid-Left" to="Fluid" />
      <exchange data="Displacement-Downstream" mesh="Solid-Right-Mesh" from="Solid-Right" to="Fluid" />
      <max-iterations value="50" />
      <relative-convergence-measure limit="1e-4" data="Stress-Upstream" mesh="Fluid-Upstream-Mesh-Centers" />
      <relative-convergence-measure limit="1e-4" data="Displacement-Upstream" mesh="Solid-Left-Mesh" />
      <relative-convergence-measure limit="1e-4" data="Stress-Downstream" mesh="Fluid-Downstream-Mesh-Centers" />
      <relative-convergence-measure limit="1e-4" data="Displacement-Downstream" mesh="Solid-Right-Mesh" />
      <extrapolation-order value="2" />
      <acceleration:IQN-ILS>
        <data name="Displacement-Upstream" mesh="Solid-Left-Mesh" />
        <data name="Displacement-Downstream" mesh="Solid-Right-Mesh" />
        <data name="Stress-Upstream" mesh="Fluid-Upstream-Mesh-Centers" />
        <data name="Stress-Downstream" mesh="Fluid-Downstream-Mesh-Centers" />
        <preconditioner type="residual-sum" />
        <filter type="QR1" limit="1e-6" />
        <initial-relaxation value="0.1" />
        <max-used-iterations value="50" />
        <time-windows-reused value="10" />
      </acceleration:IQN-ILS>
    </coupling-scheme:multi>
  </solver-interface>
</precice-configuration>
