<?xml version="1.0"?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > debug and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="2">
    <data:scalar name="Temperature" />

    <mesh name="Fluid-Mesh">
      <use-data name="Temperature" />
    </mesh>

    <mesh name="Temperature-Mesh">
      <use-data name="Temperature" />
    </mesh>

    <participant name="Fluid">
      <use-mesh name="Fluid-Mesh" provide="yes" />
      <use-mesh name="Temperature-Mesh" from="Heat" />
      <mapping:nearest-neighbor
        direction="read"
        from="Temperature-Mesh"
        to="Fluid-Mesh"
        constraint="consistent" />
      <read-data name="Temperature" mesh="Fluid-Mesh" />
    </participant>

    <participant name="Heat">
      <use-mesh name="Temperature-Mesh" provide="yes" />
      <write-data name="Temperature" mesh="Temperature-Mesh" />
    </participant>

    <m2n:sockets from="Heat" to="Fluid" exchange-directory=".." />

    <coupling-scheme:serial-explicit>
      <time-window-size value="0.005" />
      <max-time value="1.0" />
      <participants first="Heat" second="Fluid" />
      <exchange data="Temperature" mesh="Temperature-Mesh" from="Heat" to="Fluid" />
    </coupling-scheme:serial-explicit>
  </solver-interface>
</precice-configuration>
