<?xml version="1.0"?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > debug and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="2">
    <data:scalar name="Temperature1" />
    <data:scalar name="Heat-Flux1" />
    <data:scalar name="Temperature2" />
    <data:scalar name="Heat-Flux2" />

    <mesh name="Fluid1-Mesh">
      <use-data name="Temperature1" />
      <use-data name="Heat-Flux1" />
    </mesh>

    <mesh name="Fluid2-Mesh">
      <use-data name="Temperature2" />
      <use-data name="Heat-Flux2" />
    </mesh>

    <mesh name="Solid-Fluid1-Mesh-Faces">
      <use-data name="Heat-Flux1" />
    </mesh>

    <mesh name="Solid-Fluid1-Mesh-Nodes">
      <use-data name="Temperature1" />
    </mesh>

    <mesh name="Solid-Fluid2-Mesh-Faces">
      <use-data name="Heat-Flux2" />
    </mesh>

    <mesh name="Solid-Fluid2-Mesh-Nodes">
      <use-data name="Temperature2" />
    </mesh>

    <participant name="Fluid1">
      <use-mesh name="Fluid1-Mesh" provide="yes" />
      <use-mesh name="Solid-Fluid1-Mesh-Faces" from="Solid" />
      <read-data name="Heat-Flux1" mesh="Fluid1-Mesh" />
      <write-data name="Temperature1" mesh="Fluid1-Mesh" />
      <mapping:nearest-neighbor
        direction="read"
        from="Solid-Fluid1-Mesh-Faces"
        to="Fluid1-Mesh"
        constraint="consistent" />
    </participant>

    <participant name="Solid">
      <use-mesh name="Fluid1-Mesh" from="Fluid1" />
      <use-mesh name="Solid-Fluid1-Mesh-Faces" provide="yes" />
      <use-mesh name="Solid-Fluid1-Mesh-Nodes" provide="yes" />
      <use-mesh name="Solid-Fluid2-Mesh-Nodes" provide="yes" />
      <use-mesh name="Solid-Fluid2-Mesh-Faces" provide="yes" />
      <use-mesh name="Fluid2-Mesh" from="Fluid2" />
      <mapping:nearest-neighbor
        direction="read"
        from="Fluid1-Mesh"
        to="Solid-Fluid1-Mesh-Nodes"
        constraint="consistent" />
      <mapping:nearest-neighbor
        direction="read"
        from="Fluid2-Mesh"
        to="Solid-Fluid2-Mesh-Nodes"
        constraint="consistent" />
      <read-data name="Temperature1" mesh="Solid-Fluid1-Mesh-Nodes" />
      <write-data name="Heat-Flux1" mesh="Solid-Fluid1-Mesh-Faces" />
      <write-data name="Heat-Flux2" mesh="Solid-Fluid2-Mesh-Faces" />
      <read-data name="Temperature2" mesh="Solid-Fluid2-Mesh-Nodes" />
    </participant>

    <participant name="Fluid2">
      <use-mesh name="Fluid2-Mesh" provide="yes" />
      <use-mesh name="Solid-Fluid2-Mesh-Faces" from="Solid" />
      <read-data name="Heat-Flux2" mesh="Fluid2-Mesh" />
      <write-data name="Temperature2" mesh="Fluid2-Mesh" />
      <mapping:nearest-neighbor
        direction="read"
        from="Solid-Fluid2-Mesh-Faces"
        to="Fluid2-Mesh"
        constraint="consistent" />
    </participant>

    <m2n:sockets from="Fluid1" to="Solid" exchange-directory=".." />
    <m2n:sockets from="Fluid2" to="Solid" exchange-directory=".." />

    <coupling-scheme:multi>
      <time-window-size value="0.01" />
      <max-time value="1" />
      <max-iterations value="30" />
      <participant name="Fluid1" />
      <participant name="Fluid2" />
      <participant name="Solid" control="yes" />
      <exchange data="Temperature1" mesh="Fluid1-Mesh" from="Fluid1" to="Solid" />
      <exchange data="Heat-Flux1" mesh="Solid-Fluid1-Mesh-Faces" from="Solid" to="Fluid1" />
      <exchange data="Temperature2" mesh="Fluid2-Mesh" from="Fluid2" to="Solid" />
      <exchange data="Heat-Flux2" mesh="Solid-Fluid2-Mesh-Faces" from="Solid" to="Fluid2" />

      <relative-convergence-measure limit="1.0e-5" data="Temperature1" mesh="Fluid1-Mesh" />
      <relative-convergence-measure limit="1.0e-5" data="Heat-Flux1" mesh="Solid-Fluid1-Mesh-Faces" />
      <relative-convergence-measure limit="1.0e-5" data="Heat-Flux2" mesh="Solid-Fluid2-Mesh-Faces" />
      <relative-convergence-measure limit="1.0e-5" data="Temperature2" mesh="Fluid2-Mesh" />

      <acceleration:IQN-ILS>
        <data name="Temperature1" mesh="Fluid1-Mesh" />
        <data name="Heat-Flux1" mesh="Solid-Fluid1-Mesh-Faces" />
        <data name="Heat-Flux2" mesh="Solid-Fluid2-Mesh-Faces" />
        <data name="Temperature2" mesh="Fluid2-Mesh" />
        <initial-relaxation value="0.5" />

        <preconditioner type="residual-sum" />
        <filter type="QR1" limit="1e-6" />
        <max-used-iterations value="50" />
        <time-windows-reused value="10" />
      </acceleration:IQN-ILS>
    </coupling-scheme:multi>
  </solver-interface>
</precice-configuration>
