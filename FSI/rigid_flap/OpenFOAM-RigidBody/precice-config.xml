<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > debug and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="2">
    <data:vector name="Forces" />
    <data:vector name="Displacements" />

    <mesh name="Fluid-Mesh-Centers">
      <use-data name="Forces" />
    </mesh>

    <mesh name="Fluid-Mesh-Nodes">
      <use-data name="Displacements" />
    </mesh>

    <mesh name="Solid-Mesh">
      <use-data name="Displacements" />
      <use-data name="Forces" />
    </mesh>

    <participant name="Fluid">
      <use-mesh name="Fluid-Mesh-Nodes" provide="yes" />
      <use-mesh name="Fluid-Mesh-Centers" provide="yes" />
      <use-mesh name="Solid-Mesh" from="Solid" />
      <read-data name="Displacements" mesh="Fluid-Mesh-Nodes" />
      <write-data name="Forces" mesh="Fluid-Mesh-Centers" />
      <mapping:rbf-thin-plate-splines
        direction="read"
        from="Solid-Mesh"
        to="Fluid-Mesh-Nodes"
        constraint="consistent" />
      <mapping:rbf-thin-plate-splines
        direction="write"
        from="Fluid-Mesh-Centers"
        to="Solid-Mesh"
        constraint="conservative" />
    </participant>

    <participant name="Solid">
      <use-mesh name="Solid-Mesh" provide="yes" />
      <read-data name="Forces" mesh="Solid-Mesh" />
      <write-data name="Displacements" mesh="Solid-Mesh" />
      <watch-point mesh="Solid-Mesh" name="flap-tip" coordinate="0.25;0.0" />
      <export:vtk directory="coupling-meshes" />
    </participant>

    <m2n:sockets from="Fluid" to="Solid" />

    <coupling-scheme:serial-implicit>
      <time-window-size value="2.5e-2" />
      <max-time value="2.5" />
      <participants first="Fluid" second="Solid" />
      <exchange data="Forces" mesh="Solid-Mesh" from="Fluid" to="Solid" />
      <exchange data="Displacements" mesh="Solid-Mesh" from="Solid" to="Fluid" />
      <max-iterations value="10" />
      <relative-convergence-measure limit="1e-3" data="Displacements" mesh="Solid-Mesh" />
      <acceleration:IQN-ILS>
        <data name="Displacements" mesh="Solid-Mesh" />
        <preconditioner type="residual-sum" />
        <filter type="QR2" limit="5.0e-5" />
        <initial-relaxation value="0.3" />
        <max-used-iterations value="15" />
        <time-windows-reused value="2" />
      </acceleration:IQN-ILS>
    </coupling-scheme:serial-implicit>
  </solver-interface>
</precice-configuration>
